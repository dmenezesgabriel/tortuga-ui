{
  "name": "tortuga-ui",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "types": "./dist/types/index.d.ts",
  "main": "./dist/tortuga-ui.umd.cjs",
  "module": "./dist/tortuga-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/tortuga-ui.es.js",
      "require": "./dist/tortuga-ui.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "build": "run-p type-check build-only",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build && vue-tsc --emitDeclarationOnly && mv dist/src dist/types",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test-storybook": "test-storybook"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "chart.js": "^3.8.0",
    "chartjs-adapter-date-fns": "^2.0.0",
    "chartjs-plugin-datalabels": "^2.1.0",
    "date-fns": "^2.29.2",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/types": "^7.19.3",
    "@rushstack/eslint-patch": "^1.1.0",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-interactions": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-storysource": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/builder-vite": "^0.2.3",
    "@storybook/jest": "^0.0.10",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/test-runner": "^0.7.2",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.12",
    "@storybook/vue3": "^6.5.12",
    "@types/bootstrap": "^5.2.4",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^16.11.63",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.0",
    "@vue/tsconfig": "^0.1.3",
    "axe-playwright": "^1.1.11",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.2",
    "start-server-and-test": "^1.14.0",
    "style-loader": "^3.3.1",
    "typescript": "~4.7.4",
    "vite": "^3.1.4",
    "vitest": "^0.15.1",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.38.1"
  }
}
